@page "/fetchdata"

<h3>Open source projects</h3>

@if (projectData is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created</th>
                <th>Last update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in projectData)
            {
                <tr>
                    <td>
                        <a href="@project.HTML_URL">
                            @project.Full_Name
                        </a>
                    </td>
                    <td>@project.Description</td>
                    <td>@project.Created_At.ToShortDateString()</td>
                    <td>@project.Updated_At.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    [CascadingParameter]
    IEnumerable<Project> projectData { get; set; }

}